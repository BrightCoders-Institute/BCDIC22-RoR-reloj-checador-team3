<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 display-4">Employees</h4>
  </div>
  <%= link_to 'Register employee', new_employee_path %>
  <% if @employees.present? %>
    <div class="row justify-content-center">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">Email</th>
            <th scope="col">Name</th>
            <th scope="col">Position</th>
            <th scope="col">Employee Number</th>
            <th scope="col">Employee Private Number</th>
            <th scope="col" colspan="3">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @employees.each do |employee| %>
            <tr>
              <td><%= employee.email %></td>
              <td><%= employee.name %></td>
              <td><%= employee.position %></td>
              <td><%= employee.employee_num %></td>
              <td><%= employee.employee_private_num %></td>

              <td><%= link_to 'Show', employee_path(employee.id) %></td>
              <td><%= link_to 'Edit', edit_employee_path(employee.id) %></td>
              <td><%= button_to 'Delete', employee_path(employee.id), method: :delete %></td>

            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="p-3 mb-2 bg-light text-dark">
      <span class="text-info font-weight-bold">Welcome! </span>
      Create your first post
    </div>
  <% end %>
</div>