
<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">New Employee</h4>
  </div>
  <div class="row justify-content-center">
    <%= form_with scope: :employee, url: employees_path, local: true do |form| %>
      <div class="form-group">
      
        <%= form.label :email %>
        <%= form.text_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_area :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :position %>
        <%= form.text_area :position, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :employee_num %>
        <%= form.text_area :employee_num, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :employee_private_num %>
        <%= form.text_area :employee_private_num, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>
  </div>
</div>